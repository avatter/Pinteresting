<div class="jumbotron">
 
<% if user_signed_in? %>

  <h1>Location-Übersicht</h1>
<br>
<p>
  <table class="table">
  <thead>
    <tr>
      <th>Strasse</th>
      <th>Hausnummer</th>
      <th>Plz</th>
      <th>Stadt</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Mail-Adresse</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @adresses.each do |adress| %>
      <tr>
        <td><%= adress.strasse %></td>
        <td><%= adress.hausnummer %></td>
        <td><%= adress.plz %></td>
        <td><%= adress.stadt %></td>
        <td><%= adress.latitude %></td>
        <td><%= adress.longitude %></td>
        <td><%= adress.user.email if adress.user %></td>
        <td><%= link_to 'Anzeigen', adress %></td>
        <td><%= link_to 'Ändern', edit_adress_path(adress) %></td>
        <td><%= link_to 'Löschen', adress, method: :delete, data: { confirm: 'Bist du sicher, dass du das tun möchtest?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</p>

<br>

<%= link_to 'Neue Location anlegen', new_adress_path, class:"btn btn-primary     btn-lg"  %>


 <% else %>

 <p>Jetzt anmelden: </p>
      <p><%= link_to "Neues Konto", new_user_registration_path, class:"btn btn-primary    btn-lg" %>   </p>
      <%= link_to "Sign in", new_user_session_path , class:"btn btn-primary btn-lg"%> 

      
      <% end %>  
 
  
</div>
